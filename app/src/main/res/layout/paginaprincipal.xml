<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262525"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="542dp"
        android:layout_height="519dp"
        android:orientation="vertical"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/botonJugar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/ruleta"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/botonJugar"
        android:layout_width="200dp"
        android:layout_height="79dp"
        android:backgroundTint="#0F3610"
        android:baselineAligned="false"
        android:onClick="OnClickListener"
        android:orientation="vertical"
        android:textAlignment="center"
        android:textColor="#F6F6F6"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/botonOpciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="MissingConstraints"
        tools:text="Jugar"
        tools:visibility="visible" />

    <Button
        android:id="@+id/botonOpciones"
        android:layout_width="200dp"
        android:layout_height="79dp"
        android:backgroundTint="#0F3610"
        android:baselineAligned="false"
        android:onClick="OnClickListener"
        android:orientation="vertical"
        android:textAlignment="center"
        android:textColor="#F6F6F6"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/botonSalir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonJugar"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="MissingConstraints"
        tools:text="Opciones"
        tools:visibility="visible" />

    <Button
        android:id="@+id/botonSalir"
        android:layout_width="200dp"
        android:layout_height="79dp"
        android:backgroundTint="#0F3610"
        android:baselineAligned="false"
        android:onClick="OnClickListener"
        android:orientation="vertical"
        android:textAlignment="center"
        android:textColor="#F6F6F6"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonOpciones"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="MissingConstraints"
        tools:text="Salir"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>