<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondopantalla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|center"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/button_engranaje"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="22dp"
        android:background="@null"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@null"
        android:src="@drawable/engranaje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageButton
        android:id="@+id/button_flechaAtras"
        android:layout_width="67dp"
        android:layout_height="26dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="229dp"
        android:layout_marginBottom="34dp"
        android:background="@null"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@null"
        android:src="@drawable/flechaatras"
        app:layout_constraintBottom_toTopOf="@+id/text_fichasDisponibles"
        app:layout_constraintEnd_toStartOf="@+id/button_engranaje"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints" />

    <TextView
        android:id="@+id/text_fichasDisponibles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="19dp"
        android:text="Fichas disponibles:"
        android:textColor="#FFFEFE"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/text_resultadoFichasDisponibles"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteY="95dp" />

    <ImageView
        android:id="@+id/roulette"
        android:layout_width="368dp"
        android:layout_height="374dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="33dp"
        android:background="@null"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@+id/button_finalizarJuego"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/roulette"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/button_apuesta"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#2B752F"
        android:text="APUESTA"
        android:textAlignment="center"
        android:textColor="#FDFCFC"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Button
        android:id="@+id/button_finalizarJuego"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#2B752F"
        android:text="Finalizar juego"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText"
        tools:layout_editor_absoluteY="578dp" />

    <Button
        android:id="@+id/button_spin"
        android:layout_width="147dp"
        android:layout_height="72dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#2B752F"
        android:text="Girar (prueba)"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="320dp" />

    <TextView
        android:id="@+id/text_resultadoFichasDisponibles"
        android:layout_width="71dp"
        android:layout_height="26dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="168dp"
        android:text=""
        android:textAlignment="textStart"
        android:textColor="#FFFEFE"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>