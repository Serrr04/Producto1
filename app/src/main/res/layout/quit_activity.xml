<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondopantalla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|center"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_back"
        android:layout_width="121dp"
        android:layout_height="53dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="280dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#090909"
        android:text="Volver"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button_quit"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Button
        android:id="@+id/button_quit"
        android:layout_width="121dp"
        android:layout_height="53dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="280dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#F44336"
        android:text="Salir"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/text_quit"
        android:layout_width="266dp"
        android:layout_height="106dp"
        android:layout_marginStart="81dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#2B752F"
        android:gravity="center"
        android:text="¿Estás seguro que quieres salir del juego?"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_quit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>